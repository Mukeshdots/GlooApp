<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/traspreant_bg" >

     <RelativeLayout
        android:id="@+id/ad"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/logo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ad"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_06" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/poup_top" >

            <TextView
                android:id="@+id/headerr"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="center|center_vertical"
                android:text="Game Over"
                android:textColor="#FFFF00"
                android:textSize="48dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/current"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@drawable/popup_strip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/curr"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="11dp"
                android:gravity="center_vertical"
                android:text="Current Score:"
                android:textColor="#FFF"
                android:textSize="28dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/curr_score"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical|right"
                android:text="35000"
                android:textColor="#FF9900"
                android:textSize="28dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/middle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@drawable/popup_strip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/high"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="11dp"
                android:gravity="center_vertical"
                android:text="HighScore:"
                android:textColor="#FFF"
                android:textSize="28dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/highScore"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical|right"
                android:text="45000"
                android:textColor="#FF9900"
                android:textSize="28dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottem"
            android:layout_width="fill_parent"
            android:layout_height="260dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/poup_bottom"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/share"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:padding="10dp" >

                <Button
                    android:id="@+id/faceb"
                    android:layout_width="fill_parent"
                    android:layout_height="49dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/pop_up_facebook" />

                <Button
                    android:id="@+id/twitter"
                    android:layout_width="fill_parent"
                    android:layout_height="49dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/pop_up_twitter" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/playyyy"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" >

                <Button
                    android:id="@+id/playy"
                    android:layout_width="250dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/button_play"
                    android:gravity="center_horizontal" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bottem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="7dp" >

                <Button
                    android:id="@+id/home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/popup_home" />

                <Button
                    android:id="@+id/gamecen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:layout_toRightOf="@+id/home"
                    android:background="@drawable/popup_label" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/tagg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/logo"
        android:background="@drawable/new_score"
        android:gravity="right"
        android:padding="15dp" >

        <TextView
            android:id="@+id/hhh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="New"
            android:textColor="#FFFF00"
            android:textSize="31dp" />

        <TextView
            android:id="@+id/highhhh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hhh"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="Highscore"
            android:textColor="#FFF"
            android:textSize="22dp" />
    </RelativeLayout>

</RelativeLayout>